/* miniprogram/pages/sizeList/index.wxss */
.top {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 8vh;
  padding: 10vh 0 0 0;
  background-color: #fff;
  font-size: 16px;
}

.container {
  margin-top: 18vh;
  height: 100%;
  background-color: #fff;
}

.list {
  display: flex;
  height: 10vh;
  background-color: #2c2c2c;
  margin: 0 20px 20px 20px;
  border-radius: 15px;
  justify-content: space-between;
  align-items: center;
  color: #fff
}

.list image {
  margin-right: 20px;
  border-radius: 50%;
}

.list view {
  margin-left: 10px;
}

.title {
  font-size: 18px;
  margin-bottom: 10px;
  font-weight: 500;
}

.description {
  font-size: 14px;
}
.none {
  width: 300px;
  height: 300px;
  margin: 0 auto
}