/* pages/labAdmin/index.wxss */
.lab-admin {
  margin-top: 10vh;
  padding: 0 10px 10px 10px;
}


.content {
  margin-top: 10px;
  width: 100%;
  height: 100%;
}

.container {
  height: 300px;
  /* margin-top: 16px; */
  border-radius: 10px;
  margin: 0 10px 20px 10px;
}

.container {
  position: relative;
  color: #2c2c2c;
}

.img {
  width: 100%;
  border-radius: 10px 10px 0 0;
  position: absolute;
}

.img_item {
  border-radius: 10px 10px 0 0;
  width: 100%;
}

.start {
  height: 30px;
  line-height: 30px;
  font-size: 15px;
  position: absolute;
  bottom: 35%;
  width: 100%;
  text-align: center;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.5);
}

.msg {
  position: absolute;
  width: 100%;
  background-color: #fff;
  height: 45%;
  bottom: 0;
  border-radius: 0 0 10px 10px;
}

.name {
  font-size: 17px;
  margin: 16px;
}

.time {
  margin: 0 16px 16px 16px;
}

.time text:first-child {
  margin-right: 10px;
  color: #165DFF;
}

.btns {
  margin: 10px 16px 0 16px;
  text-align: right;
}

.btn {
  margin-left: 10px;
}