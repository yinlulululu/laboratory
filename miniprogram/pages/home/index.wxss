.header {
    margin-top: 12vh;
    margin-left: 20px;
    margin-right: 20px;
}

.title {
    height: 50rpx;
    font-size: 18px;
    color: #2c2c2c;
    /* position: fixed;
    top: 12vh;
    z-index: 2; */
}

.container {
    height: 290px;
    margin-top: 16px;
    border-radius: 15px;
}

.to_select {
    margin-right: 10rpx;
}

.total {
    font-size: 15px;
    color: #aaa;
}

.container {
    position: relative;
    color: #2c2c2c;
}

.img {
    width: 100%;
    border-radius: 15px 15px 0 0;
    position: absolute;
}

.img_item {
    border-radius: 15px 15px 0 0;
    width: 100%;
}

.start {
    height: 30px;
    line-height: 30px;
    font-size: 15px;
    position: absolute;
    bottom: 35%;
    width: 100%;
    text-align: center;
    color: #fff;
    background-color: rgba(0, 0, 0, 0.5);
}

.msg {
    position: absolute;
    width: 100%;
    background-color: #fff;
    height: 45%;
    bottom: 0;
    border-radius: 0 0 15px 15px;
}

.name {
    font-size: 17px;
    margin: 16px;
}

.time {
    margin: 0 16px 16px 16px;
}

.time text:first-child {
    margin-right: 10px;
    color: #165DFF;
}

.address {
    margin: 0 16px 0 16px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.address view:first-child {
    width: 85%;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.address view:last-child {
    font-size: 14px;
    color: #165DFF;
}

.role {
    margin: 20px;
}

.role view {
    color: #2c2c2c;
    height: 50rpx;
    font-size: 18px;
}

.role_img {
    width: 100%;
    height: 360px;
    margin-top: 16px;
}