/* miniprogram/pages/sizeList/index.wxss */
.top {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  /* height: 20px; */
  padding: 80px 0 0 0;
  background-color: #fff;
  font-size: 16px;
}

.content {
  margin-top: 140px;
  width: 100%;
  height: 100%;
  /* background-color: #fff; */
}

.none {
  width: 300px;
  height: 300px;
  margin: 0 auto
}

.container {
  height: 290px;
  /* margin-top: 16px; */
  border-radius: 15px;
  margin: 0 20px 20px 20px;
}

.to_select {
  margin-right: 10rpx;
}

.total {
  font-size: 15px;
  color: #aaa;
}

.container {
  position: relative;
  color: #2c2c2c;
}

.img {
  width: 100%;
  border-radius: 15px 15px 0 0;
  position: absolute;
}

.img_item {
  border-radius: 15px 15px 0 0;
  width: 100%;
}

.start {
  height: 30px;
  line-height: 30px;
  font-size: 15px;
  position: absolute;
  bottom: 35%;
  width: 100%;
  text-align: center;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.5);
}

.msg {
  position: absolute;
  width: 100%;
  background-color: #fff;
  height: 45%;
  bottom: 0;
  border-radius: 0 0 15px 15px;
}

.name {
  font-size: 17px;
  margin: 16px;
}

.time {
  margin: 0 16px 16px 16px;
}

.time text:first-child {
  margin-right: 10px;
  color: #165DFF;
}

.address {
  margin: 0 16px 0 16px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.address view:first-child {
  width: 85%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.address view:last-child {
  font-size: 14px;
  color: #165DFF;
}