<view class="my-page">
  <view class="top">
    <view bindtap="userInfoAuth" class="user-image">
      <image wx-if="{{authorized}}" style="width: 100%;height:100%;" mode="widthFix" src="{{userInfo.avatarUrl}}"></image>
    </view>
    <view wx:if="{{!canIUseGetUserProfile}}" class="user-name" style="width:6em;">
      <view wx-if="{{!authorized}}" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo" size="mini">授权登录</view>
      <view wx-if="{{authorized}}">{{userInfo.nickName}}</view>
    </view>
    <view wx:if="{{canIUseGetUserProfile}}" class="user-name" style="width:6em;">
      <view wx-if="{{!authorized}}" bindtap="getUserProfile" size="mini" style="color: #eee;">授权登录</view>
      <view wx-if="{{authorized}}">{{userInfo.nickName}}</view>
    </view>
  </view>
  <view class="container">
    <van-cell icon='orders-o' is-link title="我的预约" link-type="navigateTo" url="/pages/myOrder/index" style="width: 100%;" />
  </view>
  <view class="container_bot">
    <view class="row">
      <view class="cell">
        <image src="./images/lab.png"></image>
        <view>实验室管理</view>
      </view>
      <view class="cell">
        <image src="./images/ins.png"></image>
        <view>仪器管理</view>
      </view>
      <view class="cell">
        <image src="./images/notice.png"></image>
        <view>公告管理</view>
      </view>
    </view>
    <view class="row">
      <view class="cell">
        <image src="./images/message.png"></image>
        <view>反馈与建议</view>
      </view>
      <view class="cell">
        <image src="./images/author.png"></image>
        <view>联系作者</view>
      </view>
      <view class="cell">
        <image src="./images/question.png"></image>
        <view>常见问题</view>
      </view>
    </view>
  </view>
