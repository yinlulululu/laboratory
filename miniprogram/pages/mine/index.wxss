/* pages/mine/index.wxss */
.my-page {
  height: 100vh;
  /* background-color: #ccc; */
}

.top {
  width: 100%;
  height: 280px;
  display: flex;
  align-items: center;
  /* background: linear-gradient(to top, #2c2c2c, 60%, #C1CAD6); */
  background: linear-gradient(to bottom, #16D2AC, 60%, #165DFF);
  clip-path: ellipse(80% 60% at 50% 40%);

}

.user-image {
  width: 80px;
  height: 80px;
  background-color: #eee;
  border-radius: 50%;
  margin-left: 20px;
  margin-right: 20px;
}

.user-image image {
  border-radius: 50%;
}

.user-name {
  font-size: 16px;
  color: #fff;
}

.container {
  background-color: #fff;
  margin: 0 20px;
  position: relative;
  top: -60px;
  border-radius: 15px;
  padding: 10px 0;
}

.container_bot {
  background-color: #fff;
  margin: 0 20px 0 20px;
  position: relative;
  top: -40px;
  border-radius: 15px;
  padding: 10px 0;
}

.van-hairline--top-bottom:after {
  border-width: 0 !important;
  border-top-width: 0 !important;
}

.container .van-cell:last-child::after {
  border: none !important;
}

.message-btn {
  float: right;
  margin-bottom: 15px;
}