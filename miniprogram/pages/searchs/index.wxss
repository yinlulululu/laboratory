/* pages/searchs/index.wxss */
.search {
  height: 100vh;
  background-color: #fff;
}

.s-input {
  margin-top: 10vh;
  margin-left: 10px;
  margin-right: 10px;
}

.van-search__content {
  border: 1px solid #2c2c2c;
  background-color: #fff !important;
  color: #2c2c2c !important;
}

.container {
  margin-top: 15px;
}

.list {
  display: flex;
  height: 10vh;
  background-color: #2c2c2c;
  margin: 0 20px 20px 20px;
  border-radius: 15px;
  justify-content: space-between;
  align-items: center;
  color: #fff
}

.none {
  width: 300px;
  height: 300px;
  margin: 0 auto
}

.list image {
  margin-right: 20px;
  border-radius: 50%;
}

.list view {
  margin-left: 10px;
}

.title {
  font-size: 18px;
  margin-bottom: 10px;
  font-weight: 500;
}

.description {
  font-size: 14px;
}